<Page x:ConnectionId='1'
    x:Class="MusicUWP.ViewPage.LocalMusicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicUWP.ViewPage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm ="using:MusicUWP.ViewModels"
                        
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel Margin="0,20,0,0">
            <TextBlock x:ConnectionId='12' Text="本地音乐" FontSize="18" 
                       Name="TitleText"
                       RelativePanel.AlignLeftWithPanel="True"
                       VerticalAlignment="Center"
                       Margin="10,5,0,5"/>
            <TextBlock x:ConnectionId='13' FontSize="18"
                       RelativePanel.RightOf="TitleText"
                       VerticalAlignment="Center"
                       Margin="10,5,0,5"
                                                                                                               />
            <Button  Content="添加音乐" 
                      RelativePanel.AlignRightWithPanel="True" 
                      Foreground="Blue" 
                      BorderThickness="0"
                      Background="White"
                      VerticalAlignment="Center"
                      Margin="0,5,10,5"/>
        </RelativePanel>

        <ScrollViewer Grid.Row="1">
            <ListView x:ConnectionId='3' 
                  Name="LocalMusicListView"
                  IsItemClickEnabled="True"
                                                          
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  ItemContainerStyle="{StaticResource ListViewBackGroundStyle}"
                                                   >
                <ListView.ItemTemplate >
                    <DataTemplate                     >
                        <Grid x:ConnectionId='4' HorizontalAlignment="Stretch" Height="40" Width="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="2.5*" MinWidth="150" />
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:ConnectionId='5' Grid.Column="0"
                                                         
                                       Style="{StaticResource MusicListKeyInfoTextStyle}"
                                                                                                                           />
                            <!--用来显示当前播放歌曲的喇叭图标-->
                            <TextBlock x:ConnectionId='6' Grid.Column="0"
                                       Text="&#xE15D;"
                                       FontFamily="Segoe MDL2 Assets"
                                       Style="{StaticResource MusicListKeyInfoTextStyle}"
                                                                                                                                  
                                       Foreground="IndianRed"/>
                            <TextBlock x:ConnectionId='7' Grid.Column="2"
                                                                                                                              
                                       FontFamily="Segoe MDL2 Assets"
                                                                                                                                          
                                       Style="{StaticResource MusicListKeyInfoTextStyle}"/>
                            <TextBlock x:ConnectionId='8' Grid.Column="4"
                                                            
                                       Style="{StaticResource MusicListKeyInfoTextStyle}"/>
                            <TextBlock x:ConnectionId='9' Grid.Column="6"
                                                             
                                       Style="{StaticResource MusicListDetailInfoTextStyle}"/>
                            <TextBlock x:ConnectionId='10' Grid.Column="8"
                                                            
                                       Style="{StaticResource MusicListDetailInfoTextStyle}"/>
                            <TextBlock x:ConnectionId='11' Grid.Column="10"
                                                                                                             
                                       Style="{StaticResource MusicListDetailInfoTextStyle}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </ScrollViewer>

        <ProgressRing x:ConnectionId='2' Name="LocalMusicLoadingRing" 
                      Width="100" Height="100"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Grid.Row="1"
                      IsActive="False"/>

    </Grid>
</Page>

